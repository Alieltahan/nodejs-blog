{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "alwaysStrict": false,
    "strictFunctionTypes": false,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "types/*"]
    }
  },
  "include": ["/**/*"],
//  "include": ["./src"],
  "exclude": ["**/*/*.test.*", "**/*.spec.*"]
}
